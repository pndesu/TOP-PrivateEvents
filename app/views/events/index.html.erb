<% if user_signed_in?%>
    <%= link_to "Sign Out", destroy_user_session_path, data: {turbo_method: :delete} %>
    <%= link_to "Create Event", new_event_path %>
    <%= link_to "My Events", user_created_events_path(current_user) %>
    <%= link_to "Attended Events", user_attended_events_path(current_user) %>
    <%= link_to "Invited Events", user_invited_events_path(current_user) %>
<% else %>
    <%= link_to "Sign In", user_session_path %>
<% end %>
<h1>Events</h1>

<% Event.all.each do |event| %>
<ul>
    <li><%= link_to "#{event.name}",  event %></li>
</ul>
<% end %>